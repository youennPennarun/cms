              <!-- make all elements with class="editable" editable with Aloha Editor -->
              <script type="text/javascript">
			  
                     Aloha.ready( function() {
					 
                            var $ = Aloha.jQuery;
                            $('.editable').aloha();
							jQuery('#form').submit(function(){
								/*
								Before the form is submitted, we unload aloha and store the contents of the
								aloha editable to the textarea.
								*/
								var i = 0;
								jQuery("#var input").each(function() {
									$("#form-"+i).val(Aloha.getEditableById('val-'+i).getContents());
								});
								$("#form-0").val(Aloha.getEditableById('val-0').getContents());
								jQuery('#content').mahalo();
							});
                     });
              </script>